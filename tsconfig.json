{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "server",  
    "outDir": "./dist",  
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "server",
    "paths": {
      "@api/*": ["api/*"],
      "@controllers/*": ["api/controllers/*"],
      "@models/*": ["api/models/*"]
    }
  },
  "include": ["server"],
  "exclude": ["node_modules", "dist"]
}
