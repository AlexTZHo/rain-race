{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",  
    "outDir": "./dist",  
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@controllers/*": ["api/controllers/*"],
      "@models/*": ["api/models/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
